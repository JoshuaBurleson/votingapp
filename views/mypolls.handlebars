<script src="https://use.fontawesome.com/c6be85f781.js"></script>
<style>
  button{
    color: red; 
    opacity: 0.6;
  }
  button:hover{
    opacity: 1;
  }
</style>
<div class="jumbotron">
    <h2>My Polls</h2>
    {{#each polls}}
    <div class="container  text-center">
      <div class="row justify-content-start">
        <div class="row">
          <form action="/delete" method="post"><div class="col-4"><p><a href="/polls/{{this}}">{{this}}</a> 
          <button type="submit" value="{{this}}" name="name"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
          </p>
          </form>
          </div>
          <div class="col-4"></div></div></div></div>
    {{/each}}
    </div>